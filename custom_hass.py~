import appdaemon.plugins.hass.hassapi as hass_base
# import appdaemon.plugins.mqtt.mqttapi as mqtt_ad

class CustomHass(hass_base.Hass):
  def warn(self, message, *args):
    if args:
      self.log(message.format(*args), level="WARN")
    else:
      self.log(message, level="WARN")
  def debug(self, message, *args):
    try:
      if args:
        self.log(message.format(*args), level="DEBUG")
      else:
        self.log(message, level="DEBUG")
    except:
      self.log("Debug Logger Failed {}".format(message))

